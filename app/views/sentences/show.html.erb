<div class="container">
  <div class="sentence">
    <div class="title">
      <h2 class='blue-header header-size'><%= @sentence.name_displayed %></h2>
    </div>
    <div class="info">
      <h4><strong>Fecha:</strong> 25 de mayo de 1995
        <br>
        <strong>Demandante:</strong> <%= @sentence.capitalize_everything(@sentence.parts.first.name) %>
        <br>
        <strong>Demandado:</strong> <%= @sentence.capitalize_everything(@sentence.parts.last.name) %>
        <br>
      </h4>
      <h6>Tribunal Superior, Primer Distrito Judicial</h6>
    </div>
    <br>
    <div class="sentence-info">
      <h6><strong>Entrada:</strong> <%= @sentence.entry_point %></h6>
      <h6><%= @sentence.category %> por <%= @sentence.parts.first.name %> contra <%= @sentence.parts.last.name %></h6>
      <h6><strong>Instituci√≥n:</strong> <%= @sentence.institution %></h6>
    </div>
    <div class="body">
      <% @sentence.bodies.each do |body| %>
        <% if body.category == 'Head_1' %>
          <p><strong><%= body.content %></strong></p>
        <% elsif body.category == 'Body_2' %>
          <p class='quote'><em><%= body.content %></em></p>
        <% else %>
          <p><%= body.content %></p>
        <% end %>
        <br>
      <% end %>
    </div>
    <div class="notifieds">
      <% @sentence.notifieds.each do |notified| %>
        <p><%= notified.name %> [<%= notified.title %>]</p>
      <% end %>
    </div>
  </div>
</div>
